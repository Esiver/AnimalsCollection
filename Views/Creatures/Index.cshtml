@model IEnumerable<CreatureModel>

@{
    ViewBag.Title = "Creatures Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var creatures = Model;
}

<h2>Creatures Index!</h2>

<button>
    Create new!
</button>
                @Html.ActionLink("Create", "Create")

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
            
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Age)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Level)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Speed)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Strength)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Intelligence)
        </th>
    </tr>
    @foreach ( var creature in creatures )
    {
        <tr>
            <td>
                @creature.Name
            </td>
            <td>
                @creature.Description
            </td>
            <td>
                @creature.Age
            </td>
            <td>
                @creature.Level
            </td>
            <td>
                @creature.Speed

            </td>
            <td>
                @creature.Strength
            </td>
            <td>
                @creature.Intelligence
            </td>
            <td>

                @Html.ActionLink("Edit", "Edit", new {id= creature.Id}) | 
                @Html.ActionLink("Details", "Details", new {id= creature.Id}) | 
                @Html.ActionLink("Delete", "Delete", new {id= creature.Id}) | 

            </td>
        </tr>
    }
</table>